                if (e.key === 'Escape') {
                    closeMenu();
                }
            });
            
            const currentPath = window.location.pathname;
            const allNavLinks = document.querySelectorAll('.admin-nav-desktop a, .admin-nav-mobile a');
            
            allNavLinks.forEach(link => {
