# Railway環境変数設定テンプレート

# アプリケーション設定
NODE_ENV=production
PORT=3000

# MySQL データベース設定（Railway MySQLサービスから自動設定）
DATABASE_HOST=your_railway_mysql_host
DATABASE_PORT=3306
DATABASE_NAME=railway
DATABASE_USERNAME=root
DATABASE_PASSWORD=your_railway_mysql_password

# セッション設定（必須：強力なランダム文字列に変更すること）
SESSION_SECRET=your_super_secret_session_key_change_this

# 初期管理者パスワード（オプション：設定しない場合はデフォルト値を使用）
INITIAL_ADMIN_PASSWORD=your_secure_admin_password